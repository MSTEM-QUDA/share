# C language related part of Makefile.conf: Makefile.gcc_mpich

COMPILE.c     = gcc
COMPILE.mpicc = mpicc
COMPILE.mpicxx= mpicxx

CPPLIB = -lstdc++

DEBUGC = 
#DEBUGC = -g

.SUFFIXES: .c .cpp

FLAGC = ${SEARCH_C} -c ${OPT3} ${DEBUGC}

.c.o:
	${COMPILE.c} ${FLAGC} $<

.cpp.o:
	${COMPILE.mpicxx} ${FLAGC} $<
