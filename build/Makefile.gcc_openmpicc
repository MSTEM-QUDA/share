# C language related part of Makefile.conf: Makefile.gcc_openmpicc

COMPILE.c     = gcc
COMPILE.mpicc = openmpicc
COMPILE.mpicxx= openmpicxx

CPPLIB = -lstdc++ -lmpi_cxx

DEBUGC = 
#DEBUGC = -g

.SUFFIXES: .c .cpp

FLAGC = ${SEARCH_C} -c ${OPT3} ${DEBUGC}

.c.o:
	${COMPILE.c} ${FLAGC} $<

.cpp.o:
	${COMPILE.mpicxx} ${FLAGC} $<
