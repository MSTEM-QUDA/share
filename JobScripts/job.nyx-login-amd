#!/bin/sh
#PBS -V
#PBS -A csem
#PBS -q route
#PBS -N SWMF
#PBS -l nodes=1:ppn=12,qos=ridley
#PBS -l pmem=500mb
#PBS -l walltime=2:00:00

# cd to job submission directory
cd $PBS_O_WORKDIR

# get queue status
qstat -u $USER -n

# look at what else is running
resinfo.pl -n ridley

# run job
mpirun ./SWMF.exe > runlog_`date +%y%m%d%H%M`

